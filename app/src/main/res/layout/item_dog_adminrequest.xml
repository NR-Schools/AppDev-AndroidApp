<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="320dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="70dp"
            android:padding="50dp">

            <ImageView
                android:id="@+id/custom_item_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                />
        </androidx.cardview.widget.CardView>
        <!--
        android:id="@+id/custom_item_text1"
        android:id="@+id/custom_item_text2"
        android:id="@+id/custom_item_image"-->
        <TextView
            android:id="@+id/custom_item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/farro_bold"
            android:layout_gravity="center"
            android:text="Name"
            android:textColor="#18C17C"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/custom_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/farro"
            android:layout_gravity="center"
            android:text="Breed"
            android:textSize="15dp" />


        <Button
            android:id="@+id/dog_confirmbtn"
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:text="Confirm"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"
            app:cornerRadius="4dp"
            android:backgroundTint="#E3BC7B"
            android:textColor="@color/black"
            android:fontFamily="@font/farro_bold"
            />

        <Button
            android:id="@+id/dog_declinebtn"
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:text="Decline"
            android:layout_gravity="center"
            android:layout_marginTop="125dp"
            app:cornerRadius="4dp"
            android:backgroundTint="#E3BC7B"
            android:textColor="@color/black"
            android:fontFamily="@font/farro_bold"
            />




    </androidx.cardview.widget.CardView>


</LinearLayout>