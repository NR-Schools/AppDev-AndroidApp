<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".view.admin.UpdateDogRecordView"
    android:background="#F0EFF2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="370dp"

            android:layout_height="133dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/farro_medium"
                android:text="Additional Information"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/updateDogDescriptionField"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Add dog description..."
                android:textColor="#747b79"
                android:textSize="15sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="370dp"

            android:layout_height="300dp"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">


            <EditText
                android:id="@+id/updateDogNameField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dogname_bg"
                android:fontFamily="@font/farro_bold"
                android:inputType="text"
                android:padding="3dp"
                android:text="Dog Name"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="57dp"
                android:fontFamily="@font/farro_light"
                android:text="Breed"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/updateDogBreedField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="57dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Dog Breed"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="79dp"
                android:fontFamily="@font/farro_light"
                android:text="Color"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/updateDogColorField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="79dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Dog Color"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="101dp"
                android:fontFamily="@font/farro_light"
                android:text="Age"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/updateDogAgeField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="101dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Dog Age"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="123dp"
                android:fontFamily="@font/farro_light"
                android:text="Sex"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/updateDogSexField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="123dp"
                android:background="@drawable/dogaddinput_bg"
                android:entries="@array/dog_sex_entries"
                android:text="Dog Sex"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="145dp"
                android:fontFamily="@font/farro_light"
                android:text="Arrived Date"
                android:textSize="15sp" />

            <!--
            Plano ko sana dito is magset ng OnClickListener sa edittext
            para pagclick sa "Set Date", magpapakita ang dates thingy.
            Tapos ichange lng yung value ng text para idisplay ang date.
            -->
            <EditText
                android:focusable="false"
                android:id="@+id/updateDogArrivedDateButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="145dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Set Date"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="167dp"
                android:fontFamily="@font/farro_light"
                android:text="Arrived From"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/updateDogArrivedFromField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="167dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Where"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="189dp"
                android:fontFamily="@font/farro_light"
                android:text="Size"
                android:textSize="15sp" />


            <Spinner
                android:id="@+id/updateDogSizeField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="189dp"
                android:background="@drawable/dogaddinput_bg"
                android:entries="@array/dog_size_entries"
                android:text="Where"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="211dp"
                android:fontFamily="@font/farro_light"
                android:text="Location"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/updateDogLocationField"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="211dp"
                android:background="@drawable/dogaddinput_bg"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text="Location"
                android:textColor="#747b79"
                android:textSize="15sp" />

            <Button
                android:id="@+id/updateDogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="115dp"
                android:fontFamily="@font/farro_bold"
                android:text="Update Dog Record"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/navbar_header"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="370dp"

            android:layout_height="196dp"
            android:layout_marginStart="5dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <Button
                android:id="@+id/updateDogSelectImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo"
                app:layout_constraintStart_toEndOf="@+id/addDogNameField"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/updateDogDisplayImageView"
                android:layout_width="335dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>