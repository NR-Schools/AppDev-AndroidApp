<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="220dp"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="21dp">

            <ImageView
                android:id="@+id/dog_removebtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/removebtn" />

        </androidx.cardview.widget.CardView>


        <!--
        android:id="@+id/custom_item_text1"
        android:id="@+id/custom_item_text2"
        android:id="@+id/custom_item_image"-->
        <TextView
            android:id="@+id/custom_item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/farro_bold"
            android:text="Name"
            android:textColor="#18C17C"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/custom_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/farro"
            android:text="Breed"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:padding="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/custom_item_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</LinearLayout>