<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="260dp"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:id="@+id/dog_removebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="21dp">

            <ImageView
                android:id="@+id/dog_removebtnimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/removebtn" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dog_updateinfo"
            android:layout_width="190dp"
            android:layout_height="260dp"
            app:cardBackgroundColor="#FFFFFF">

            <TextView
                android:id="@+id/custom_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/farro_bold"
                android:text="Name"
                android:textColor="#18C17C"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custom_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/farro"
                android:text="Breed"
                android:textSize="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"
                android:padding="50dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/custom_item_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/custom_item_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/farro"
                android:text="Age"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</LinearLayout>