<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.admin.AdminDashboardView">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/adminDashboardViewToAddDogView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Dog" />

        <Button
            android:id="@+id/adminDashboardViewToAdminDogRequestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Requests" />

    </LinearLayout>

    <!-- Content, can be replaced/wrapped by SwipeRefreshLayout Later -->
    <ListView
        android:id="@+id/adminDashboardDogList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>