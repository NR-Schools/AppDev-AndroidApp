<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:fontFamily="@font/farro_light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            />

        <Spinner
            android:id="@+id/nav_breed_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:fontFamily="@font/farro_light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            />

        <Spinner
            android:id="@+id/nav_color_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:fontFamily="@font/farro_light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            />

        <Spinner
            android:id="@+id/nav_size_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:fontFamily="@font/farro_light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            />

        <Spinner
            android:id="@+id/nav_sex_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:fontFamily="@font/farro_light"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            />

        <Spinner
            android:id="@+id/nav_age_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dropdown"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp" >


        <Button
            android:id="@+id/nav_resetbtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:cornerRadius="4dp"
            android:textColor="#E3BC7B"
            android:backgroundTint="@color/white"
            app:strokeColor="#E3BC7B"
            app:strokeWidth="1dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/nav_filterbtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:layout_gravity="center"
            app:cornerRadius="4dp"
            android:backgroundTint="#E3BC7B"
            android:layout_marginLeft="70dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="113dp">

        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dog_1"
            android:layout_gravity="center"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/notification_icon_1"
            android:layout_gravity="center"
            android:layout_marginRight="110dp"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/GoToDogDashboard"
            android:layout_width="177dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/farro_bold"
            android:text="Dashboard"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/GoToDogRequestView"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/farro_bold"
            android:text="Request"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>