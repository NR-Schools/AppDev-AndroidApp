<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="55dp"
            android:padding="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/itemDogRequestImageDisplay"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>
        <!--
        android:id="@+id/custom_item_text1"
        android:id="@+id/custom_item_text2"
        android:id="@+id/custom_item_image"-->
        <TextView
            android:id="@+id/itemDogRequestNameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/farro_bold"
            android:text="Name"
            android:textColor="#18C17C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDogRequestBreedField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/farro"
            android:text="Breed"
            android:textSize="16dp" />

        <Button
            android:id="@+id/itemDogRequestUserCancelRequest"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:backgroundTint="#E3BC7B"
            android:fontFamily="@font/farro_bold"
            android:text="Cancel"
            android:textColor="@color/black"
            app:cornerRadius="4dp" />

        <TextView
            android:id="@+id/itemDogRequestAgeField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="86dp"
            android:fontFamily="@font/farro"
            android:text="Age"
            android:textSize="16dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>