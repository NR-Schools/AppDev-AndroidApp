<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/drawer_layout"
android:fitsSystemWindows="true"
tools:context=".view.user.DogDetailsView"
android:background="#F0EFF2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/navbar_header"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="0sp"
                android:paddingBottom="15sp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="370dp"

                    android:layout_height="200dp"

                    android:layout_gravity="end"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/dogDetailsImageDisplay"
                        android:layout_width="335dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="370dp"

                    android:layout_height="360dp"

                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/dogDetailsNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/dogname_bg"
                        android:fontFamily="@font/farro_bold"
                        android:padding="3dp"
                        android:text="Dog Name"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="67dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Breed"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsBreedField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="67dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Breed"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="95dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsColorField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="95dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Color"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="124dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Age"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsAgeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="124dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Age"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="152dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Sex"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsSexField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="152dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Sex"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Arrived Date"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsDateField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Arrived Date"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="209dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Arrived From"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsArrivedFromField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="209dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Arrived From"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="238dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Size"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsSizeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="238dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Size"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="266dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Location"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dogDetailsLocationField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="266dp"
                        android:fontFamily="@font/farro_light"
                        android:text="Location"
                        android:textColor="#747b79"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/dogDetailsRequestDogButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="150dp"
                        android:backgroundTint="#E3BC7B"
                        android:fontFamily="@font/farro_bold"
                        android:text="Adopt"
                        app:cornerRadius="4dp" />

                    <Button
                        android:id="@+id/dogStatusButton"
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#A6D6C4"
                        android:enabled="false"
                        android:text="Available"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:cornerRadius="15dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="370dp"

                    android:layout_height="170dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/dogDetailsMeetDog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/farro_medium"
                        android:text="Meet Name"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/dogDetailsMoreDetailsField"
                        android:layout_width="330dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/farro"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse ."
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/nav_view"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>